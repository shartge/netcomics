#Safe Havens http://www.kingfeatures.com/comics/safehavn/
sub sh {
    my $today = shift(@_);
    my ($sec,$min,$hour,$mday,$mon,$year,$wday,$yday,$isdst) = 
        gmtime($today);
    if ($wday != 0) {
	return kingfeature($today,"Safe Havens","Bill Holbrook","safehavn",
			   "Safe_Havens",[480,145]);
    } else {
	return undef;
    }
}

