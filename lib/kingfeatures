# Six Chix
sub schix {
    my $time = shift(@_);
    my @ltime = localtime($time);
    my %author = (0 => "Bannerman, Shulock, Piccolo, Telnaes, LeMieux, Piro",
		  1 => "Isabella Bannerman",
		  2 => "Margaret Shulock",
		  3 => "Rina Piccolo",
		  4 => "Ann C. Telnaes",
		  5 => "Kathryn LeMieux",
		  6 => "Stephanie Piro");
    
    return kingfeature($time,"Six Chix",$author{$ltime[6]},
		       "sixchix","6Chix",[525,165], [600,274]);
}

